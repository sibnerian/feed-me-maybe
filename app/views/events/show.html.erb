<script type="text/javascript">
    var makeAMap = function() {
        var options = {
            center: new google.maps.LatLng(<%= @event.latitude %>, <%= @event.longitude %>),
            zoom: 12,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        };
        var map2 = new google.maps.Map(document.getElementById("map-canvas"),
                options);

        var marker = new google.maps.Marker({
            position: map2.getCenter(),
            map: map2,
        }
        );
        var infowindow = new google.maps.InfoWindow();
        infowindow.setContent('<div><strong>' + "<%= @event.location %>" +  '</strong></div>');
        infowindow.open(map2, marker);


    };
    google.maps.event.addDomListener(window, 'load', makeAMap);


</script>

